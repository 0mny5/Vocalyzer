<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag('favicon.ico') %>
    <!-- OGPの設定 -->
    <meta property="og:type" content="website">
    <meta property="og:title" content="<%= t('defaults.og_title') %>">
    <meta property="og:description" content="<%= t('defaults.og_description') %>">
    <meta property="og:url" content="">
    <meta property="og:site_name" content="Vocalyzer">
    <meta property="og:image" content="<%= asset_path ('og_image.png') %>">
    <!-- Twitterカードの設定 -->
    <meta name="twitter:card" content="summary_large_image">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'slick', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'styles', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <% if logged_in? %>
      <%= render 'shared/header' %>
    <% else %>
      <%= render 'shared/before_login_header' %>
    <% end %>
  </header>

  <div style="height: 8px;"></div>

  <body class="bg-white py-5">
    <%= render 'shared/flash_message' %>
    <%= render 'shared/modal' %>
    <%= yield %>
  </body>

  <div style="height: 80px;"></div>

  <footer id="footer" class="fixed-bottom">
    <%= render 'shared/footer' %>
  </footer>
</html>
