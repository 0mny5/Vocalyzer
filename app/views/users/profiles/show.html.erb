<div class="container">
  <div class="row m-3">
    <div class="col-lg-2">
      ユーザー名:
    </div>
    <div class="col-lg-4">
      <%= current_user.name %>
    </div>
  </div>
  <div class="row m-3">
    <div class="col-lg-2">
      アイコン:
    </div>
    <div class="col-lg-4">
      <%= image_tag current_user.avatar, class: 'rounded-circle', size:'30x30' %>
    </div>
  </div>
  <div class="row m-3">
    <div class="col-lg-2">
      ログイン:
    </div>
    <div class="col-lg-4">
      <%= current_user.role %>
    </div>
  </div>
  <% if current_user.guest? %>
    <div class="row m-3">
      <%= link_to 'twitter連携', '/auth/twitter', class: 'btn btn-primary', method: :post %>
    <% else %>
      <%= link_to 'プロフィール編集', edit_users_profile_path, class: 'btn btn-secondary' %>
    <% end %>
    </div>
</div>

<%= link_to '戻る', users_projects_path(current_user) %>
