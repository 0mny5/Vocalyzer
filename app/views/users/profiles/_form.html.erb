<div class="container">
<%= form_with model: user, url: users_profile_path do |f| %>
  <div class="row justify-content-center m-3">
    <div class="col-1">
      名前 :
    </div>
    <div class="col">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="row justify-content-center m-3">
    <div class="col-1">
      画像 :
    </div>
    <div class="col">
      <%= f.file_field :avatar, class: "form-control" %>
    </div>
  </div>
  <div class="row justify-content-center m-3">
  <%= f.submit '更新', class: 'btn btn-primary' %>
  </div>
<% end %>
</div>

