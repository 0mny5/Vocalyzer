<%= form_with model: user, url: users_profile_path do |f| %>
  <div class="row m-3">
    <div class="col-lg-2">
      名前:
    </div>
    <div class="col-lg-4">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row m-3">
    <div class="col-lg-2">
      画像:
    </div>
    <div class="col-lg-4">
      <%= f.file_field :avatar %>
    </div>
  </div>
  <%= f.submit '更新', class: 'btn btn-primary' %>
<% end %>

