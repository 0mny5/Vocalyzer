<div class="container">
  <div id="select-project" class="row justify-content-center m-3">
    <%= form_with model: @project, url: select_projects_path, id: 'js-select-project' do |f| %>
      <span><%= t('.title') %> :</span>
      <%= f.collection_select :id, current_user.projects, :id, :title %>
      <%= f.submit t('.set'), class: "btn btn-secondary mx-2" %>
    <% end %>
  </div>
</div>

<div style="height: 10px;"></div>

<div class="container">
  <div class="container">
    <div class="row">
      <div class="offset-md-1">
        <% if current_user.twitter? %>
          <%= link_to "https://twitter.com/share?url=#{ request.url }", target: '_blank', class: 'btn btn-secondary' do %>
            <i class="fab fa-twitter mr-2" style='color: #3399FF;'></i><%= t('.twitter_share') %>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>

  <div class="analyze-field container">
    <div class="analyzer-1">
      <iframe src="<%= users_project_analyze_path(@project) %>" frameBorder="0" height="380px" width="1160px"></iframe>
    </div>

    <div class="border-bottom border-dark"></div>

    <div class="analyzer-2">
      <iframe src="<%= users_project_analyze_another_path(@project) %>" frameBorder="0" height="400px" width="1160px"></iframe>
    </div>
  </div>

  <div class="container">
    <p class="m-3">
    <a class="btn btn-secondary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
      <%= t('.appear_search_form') %>
    </a>
    </p>
    <div class="collapse" id="collapseExample">
      <div class="card card-body">
        <%= render 'search_field' %>

        <div class="container">
          <div id="search-field" class="m-3"></div>
        </div>
      </div>
    </div>
  </div>
</div>
